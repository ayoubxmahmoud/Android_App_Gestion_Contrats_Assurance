<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff2ea"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="126dp">

        <TextView
            android:id="@+id/textview1a"
            android:layout_width="140dp"
            android:layout_height="33dp"
            android:paddingLeft="10dp"
            android:text="numClient:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textview2a"
            app:layout_constraintEnd_toStartOf="@+id/textview1b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview1b"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:text="num"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textview2b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview1a"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview2a"
            android:layout_width="139dp"
            android:layout_height="29dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="branche:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textview2b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview1a" />

        <TextView
            android:id="@+id/textview2b"
            android:layout_width="193dp"
            android:layout_height="33dp"
            android:paddingTop="5dp"
            android:text="branche"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/validBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview2a"
            app:layout_constraintTop_toBottomOf="@+id/textview1b" />

        <Button
            android:id="@+id/validBtn"
            android:layout_width="85dp"
            android:layout_height="36dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:text="valider"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview2b" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>
