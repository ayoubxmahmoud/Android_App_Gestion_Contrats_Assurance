<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".AfficherContrat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dashboard_item_4_background"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="L'affichage de contrat"
            android:textColor="@color/colorLightText"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="621dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/client_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="Client : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nomC"
                android:layout_width="62dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="nom"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prenomC"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="prenom"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text0"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text=",adresse:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addrC"
                android:layout_width="117dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="addresse"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/agent_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="Agent : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nomA"
                android:layout_width="63dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="nom"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prenomA"
                android:layout_width="79dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="prenom"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text=",adresse:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addrA"
                android:layout_width="104dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="addresse"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numContrat_in"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="Le numéro de contrat:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/numContrat_out"
                android:layout_width="184dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="N° contrat"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="Validité : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_debut"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="debut"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text=" au "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_fin"
                android:layout_width="126dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="fin"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/valeur_assure_in"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="Valeur assurée:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valeur_assure_out"
                android:layout_width="225dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="N° contrat"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/returnBtn"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/dashboard_item_4_background"
                android:text="Retour "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>